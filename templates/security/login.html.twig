{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    {% include 'includes/navbar.html.twig' %}
    <main class="bg-gray-100 p-8">
        <form method="post" class="max-w-md mx-auto bg-white p-6 rounded-md shadow-md">
            {% if error %}
                <div class="mb-4 text-red-500">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-4">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}" class="text-blue-500">Logout</a>
                </div>
            {% endif %}

            <h1 class="text-xl font-semibold mb-4">Please sign in</h1>

            <label for="inputEmail" class="block text-gray-700">Email</label>
            <input type="text" value="{{ last_username }}" name="email" id="inputEmail" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:border-blue-500" autocomplete="username" required autofocus>

            <label for="inputPassword" class="block text-gray-700 mt-2">Password</label>
            <input type="password" name="password" id="inputPassword" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:border-blue-500" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button type="submit" class="mt-4 bg-blue-500 text-white px-4 py-2 rounded-md focus:outline-none hover:bg-blue-600">Sign in</button>
        </form>
    </main>
{% endblock %}
